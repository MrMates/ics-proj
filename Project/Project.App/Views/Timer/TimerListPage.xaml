<?xml version="1.0" encoding="utf-8" ?>
<views:ContentPageBase xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Project.App"
             xmlns:viewModels="clr-namespace:Project.App.ViewModels.Timer"
             xmlns:views="clr-namespace:Project.App.Views"
             xmlns:models="clr-namespace:Project.BL.Models;assembly=Project.BL"
             x:Class="Project.App.Views.Timer.TimerListPage"
             x:DataType="viewModels:ActivityDetailViewModel">
    <!--CONTENT ZDE-->
    <StackLayout BackgroundColor="White">
        <StackLayout Orientation="Vertical" VerticalOptions="CenterAndExpand" HorizontalOptions="Center" Margin="0,00,0,0">
            <StackLayout Orientation="Horizontal" HeightRequest="100">
                <StackLayout Orientation="Vertical" HorizontalOptions="Center">
                    <Entry Text="{Binding activity_Name}" TextColor="#475B63" FontSize="48" Placeholder="Activity Name"/>
                    <BoxView Color="#2E2C2F" HeightRequest="1" WidthRequest="600" HorizontalOptions="Center"/>
                    <StackLayout Orientation="Horizontal">
                        <Label Text="{Binding date_Converted}" TextColor="#475B63" Padding="0,5,0,0" FontSize="48"/>
                        <StackLayout Orientation="Horizontal">
                            <ImageButton Source="calendar.png" Margin="60,10,0,0" Command="{Binding DateClickedCommand}"/>
                            <DatePicker Date="{Binding time_Begin}"  x:Name="datePicker" IsVisible="{Binding is_Visible}" BackgroundColor="#475B63" Margin="0,20,0,0"/>
                        </StackLayout>
                        <Label Text="00:00:00" TextColor="#475B63" FontSize="48" Margin="30,0,0,0" x:Name="timeLabel"/>
                    </StackLayout>
                </StackLayout>
                <ImageButton x:Name="startStopButton" Source="play.png" Margin="10,0,0,0" Clicked="OnStartStop"/>
            </StackLayout>
            <StackLayout Orientation="Vertical" Margin="0,120,0,0">
                <Picker Title="Tag" FontSize="24" TextColor="#475B63" VerticalOptions="Center">
                    <Picker.Items>
                        <x:String>Option 1</x:String>
                        <x:String>Option 2</x:String>
                        <x:String>Option 3</x:String>
                    </Picker.Items>
                </Picker>
                <BoxView Color="#2E2C2F" HeightRequest="1" WidthRequest="300" HorizontalOptions="Center" Margin="0,0,405,0"/>
                <Picker Title="{Binding project_Id}" FontSize="24" TextColor="#475B63" VerticalOptions="Center">
                    <Picker.Items>
                        
                    </Picker.Items>
                </Picker>
                <BoxView Color="#2E2C2F" HeightRequest="1" WidthRequest="300" HorizontalOptions="Center" Margin="0,0,405,0"/>
                <Entry Text="{Binding activity_Description}" FontSize="24" TextColor="#475B63" Margin="0,0,410,0" MaximumWidthRequest="300" Placeholder="Description"/>
                <BoxView Color="#2E2C2F" HeightRequest="1" WidthRequest="300" HorizontalOptions="Center" Margin="0,0,405,0"/>
            </StackLayout>
        </StackLayout>

    </StackLayout>
</views:ContentPageBase>