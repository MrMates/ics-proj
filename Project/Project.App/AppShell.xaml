<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Project.App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:u="clr-namespace:Project.App.Views.User"
    xmlns:local="clr-namespace:Project.App"
    x:Name="AppShellRoot"
    Shell.FlyoutBehavior="Locked">

    <Shell.BackButtonBehavior>
        <BackButtonBehavior Command="{Binding BackCommand}"
                            IconOverride="back.png" />
    </Shell.BackButtonBehavior>

    <FlyoutItem Title="Home">
        <Tab>
            <ShellContent
                
                Title="Home"
                ContentTemplate="{DataTemplate local:MainPage}"
                Route="MainPage" />
        </Tab>
    </FlyoutItem>
    <FlyoutItem Title="Users (temp)">
        <Tab>
            <ShellContent
                
                Title="Users (temp)"
                ContentTemplate="{DataTemplate u:UserListPage}"
                Route="UserList" />
        </Tab>
    </FlyoutItem>

    <MenuItem Text="asdasd" Command="{Binding Source={x:Reference AppShellRoot}, Path=GoToUsersCommand}" />
    <MenuItem Text="Projects" Command="{Binding Source={x:Reference AppShellRoot}, Path=GoToProjectsCommand}" />

</Shell>